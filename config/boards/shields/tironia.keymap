#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        steno_layer {
            // Custom 28-Key Split Steno Layout for Plover
            // Left Hand (11 keys)          Right Hand (17 keys)
            // ┌─────┬─────┬─────┬─────┬─────┐    ┌─────┬─────┬─────┬─────┬─────┬─────┐
            // │ #1  │ S-  │ T-  │ K-  │ P-  │    │ W-  │ H-  │ R-  │ A   │ O   │ *   │
            // ├─────┼─────┼─────┼─────┼─────┤    ├─────┼─────┼─────┼─────┼─────┼─────┤
            // │ #2  │ S-  │ K-  │ W-  │ R-  │    │ *   │ -F  │ -P  │ -L  │ -T  │ -D  │
            // └─────┴─────┼─────┼─────┼─────┤    ├─────┼─────┼─────┼─────┴─────┴─────┘
            //             │ #3  │ #4  │ A   │    │ E   │ U   │ #12 │
            //             └─────┴─────┴─────┘    └─────┴─────┴─────┘
            
            bindings = <
                // Left hand - 5 top + 5 bottom + 3 thumb (13 keys)
                &kp N1    &kp Q     &kp W     &kp E     &kp R      &none     // Top: #1, S-, T-, K-, P- + spacer
                &kp Y     &kp U     &kp I     &kp O     &kp P     &kp LBKT   // Right Top: W-, H-, R-, A, O, *
                &kp N2    &kp A     &kp S     &kp D     &kp F      &none     // Bottom: #2, S-, K-, W-, R- + spacer
                &kp G     &kp H     &kp J     &kp K     &kp L     &kp SEMI   // Right Bottom: *, -F, -P, -L, -T, -D
                &none     &none     &kp N3    &kp N4    &kp T      &none     // Thumbs: spacers + #3, #4, A + spacer
                &kp B     &kp N     &kp N0    &none     &none     &none      // Right Thumbs: E, U, #12 + spacers
            >;
        };
    };
};